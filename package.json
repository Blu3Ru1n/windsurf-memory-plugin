{
  "name": "windsurf-memory-plugin",
  "version": "0.1.0",
  "description": "A memory management plugin for Windsurf",
  "main": "dist/extension.js",
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "test": "jest",
    "test:watch": "jest --watch",
    "clean": "rimraf dist",
    "prebuild": "npm run clean"
  },
  "keywords": ["windsurf", "plugin", "llm", "memory"],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "sqlite": "^5.0.1",
    "sqlite3": "^5.1.6",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.3",
    "@types/node": "^20.4.5",
    "@types/sqlite3": "^3.1.8",
    "@types/uuid": "^9.0.2",
    "jest": "^29.6.2",
    "rimraf": "^5.0.1",
    "ts-jest": "^29.1.1",
    "typescript": "^5.1.6"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": ["**/__tests__/**/*.test.ts"],
    "moduleFileExtensions": ["ts", "js", "json"],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    }
  }
}
